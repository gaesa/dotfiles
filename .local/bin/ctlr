#!/usr/bin/env python3
from subprocess import run
from sys import argv


def main():
    if argv[1] == "--user":
        run(["systemctl", "--user", "daemon-reload"])
        run(["systemctl", "--user", "stop", *argv[2:]])
        run(["systemctl", "--user", "start", *argv[2:]])
    else:
        run(["systemctl", "daemon-reload"])
        run(["sudo", "systemctl", "stop", *argv[1:]])
        run(["sudo", "systemctl", "start", *argv[1:]])


if __name__ == "__main__":
    main()
