[init]
    defaultBranch = main
[diff]
    tool = nvimdiff
[difftool "nvimdiff"]
    cmd = nvim -d \"$LOCAL\" \"$REMOTE\" -c \"wincmd w\" -c \"wincmd H\"
[difftool]
    prompt = false
[merge]
    tool = nvimdiff
[mergetool "nvimdiff"]
    cmd = nvim -d \"$LOCAL\" \"$MERGED\" \"$BASE\" \"$REMOTE\" -c \"wincmd w\" -c \"wincmd J\"
[alias]
    st = status
    d = difftool
    cm = commit
    rst = restore
    a = add
    co = checkout
    cl = clone
    sub = submodule
    rb = rebase
    mg = merge
    mgt = mergetool
    cp = cherry-pick
    lg = log --graph --pretty=format:'%C(auto)%h%C(auto)%d %s %C(dim white)(%aN, %ar)'
