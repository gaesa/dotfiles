#!/usr/bin/zsh

# yt-dlp audio with search
function yta() {
    mpv --profile=audio --ytdl-format=bestaudio ytdl://ytsearch:"$*"
}

# Replace diff with git diff
function diff() {
    git diff --no-index "$1" "$2"
    return 0
}

