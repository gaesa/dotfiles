function raz() {
    local -r tmp="$(mktemp)"
    ranger --choosedir="${tmp}" "$@"
    local -r dir="$(cat "${tmp}")"
    rm "${tmp}"
    if [[ "$dir" != "$(pwd)" ]]; then
        z "$dir"
    else
        return 0
    fi
}
bindkey -s '^N' 'raz\n'

function private_mode() {
    unset HISTFILE
    printf "zsh is running in private mode, history will not be persisted.\n"
}
bindkey -s '^P' 'private_mode\n'
